generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  pets     Pet[]
}

model Pet {
  id               Int             @id @default(autoincrement())
  name             String
  species          String
  breed            String
  birthDate        DateTime
  color            String
  userid          Int
  user            User            @relation(fields: [userid], references: [id])
  vaccinations     Vaccination[]
  treatments       Treatment[]
  activities       Activity[]
  consultations    Consultation[]
  vaccinationRecord VaccinationRecord[]
}

model Vaccination {
  id             Int     @id @default(autoincrement())
  name           String
  applicationDate DateTime
  weight         Decimal
  petId          Int     
  pet            Pet     @relation(fields: [petId], references: [id])
  vaccinationRecordId Int
  vaccinationRecord VaccinationRecord @relation(fields: [vaccinationRecordId], references: [id])
}

model Treatment {
  id         Int      @id @default(autoincrement())
  name       String
  description String
  startDate  DateTime
  endDate    DateTime
  petId      Int 
  pet        Pet      @relation(fields: [petId], references: [id])
}

model Activity {
  id           Int      @id @default(autoincrement())
  activityType String
  description  String
  date         DateTime
  petId        Int 
  pet          Pet      @relation(fields: [petId], references: [id])
}

model Consultation {
  id           Int      @id @default(autoincrement())
  veterinarian String
  description  String
  date         DateTime
  petId        Int      
  pet          Pet      @relation(fields: [petId], references: [id])
}

model VaccinationRecord {
  id         Int      @id @default(autoincrement())
  recordType String
  petId      Int      
  pet        Pet      @relation(fields: [petId], references: [id])
  vaccinations Vaccination[]
}